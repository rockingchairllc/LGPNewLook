<% @users.each do |user| %>
	<br>
  <% if user.user_images.first(:order=>'id desc', :conditions=>'is_profile_pic=true') %>
	  <%= image_tag user.user_images.first(:order=>'id desc', :conditions=>'is_profile_pic=true').photo.url(:medium), :class=>'buddy_search_profile_pic' %>
  <% else %>
    -- No Image Replace with handler. --
  <% end %>
	<b><%= user.firstname %></b>
	<br>
	<%= user.gender %>
	/
	<%= age(user.birthdate) %>
	/
	<%= user.orientation %>
	/
	<% #we still need to convert zip to manhattan neighborhood %>
	<%= user.zipcode%>
	<br>
	Looking for buddies to see:
	<br>
	<%= user.watch_lists.first.movie.title %>
  <% if user.watch_lists.first.watch_list_preferred_theaters.count > 0 %>
    at
    <%= user.watch_lists.first.watch_list_preferred_theaters.first.theater.name %>
    <% if user.watch_lists.first.watch_list_preferred_theaters.count > 1 %>            
      and
      <%= pluralize(user.watch_lists.first.watch_list_preferred_theaters.count - 1, 'more theater') %>.
    <% end %>
  <% end %>
	<br>
<% end %>
