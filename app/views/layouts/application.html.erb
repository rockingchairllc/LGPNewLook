<!DOCTYPE html>
<html>
<head>
  <title>Let's Get Popcorn</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag    "header", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield :head %>
</head>
<body>
	<header class="app_head">
		<div class="logotype"></div>
		
		<nav>
			<%= link_to "Popcorn Buddies" %>
			<%= link_to "Movies", watchlist_path %>
			<%= link_to "Reviews" %>
		</nav>
		
		<div class="current_user">
			<%= image_tag 'user.jpeg', :class=>'user_thumb' %>
			<%= link_to "Username", profile_path, :class => "user_name" %>
		</div><!-- .current_user -->
		
		<!-- clear the float -->
		<div class="clearfloat"></div>
	</header>
<!-- end header -->

<%= yield %>

</body>
</html>
