<!DOCTYPE html>
<html>
<head>
 <%= javascript_include_tag :defaults %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag    "welcome", :media => "all" %>
</head>
<body>
	
	<%if user_signed_in?%>
			<a href="/users/sign_out" class="login_link">Logout</a>
	<%else%>
		<a href="/users/sign_in" class="login_link">Login</a>
	<%end%>

	<section>
		<div class="logotype"></div>

		<h2>Find a movie buddy today!</h2>
		
		<%= form_tag "/welcome/verify_code", {:id => 'invite_code'} do %>
		<!-- <form id="invite_code"> -->
			<label>Invite Code: </label>
			<input type="text" placeholder="Enter your code" name="code_value" id="code_value" size="30" type="text" />
			<input type="submit" value="Get Popcorn!" />
		<!-- </form> -->
		<%end%>

	</section>
	<footer>
		Don't have an invite code? 
		<a href="javascript:void(0)">Use referrer e-mail address instead</a> 
		or 
		<a href="javascript:void(0)">request an invite</a>.
		
		<nav class="prototype_nav_links">
		<%= link_to "Dashboard", dashboard_path %>
		|
		<%= link_to "Profile", profile_path %>
		</nav>
	</footer>
		
</body>
</html>