<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

	<div><%= f.label :username %><br />
	  <%= f.text_field :username %></div>
	
  <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

	<div><%= f.label :gender %><br />
	<%= select :user, :gender, options_for_select([["A Girl", "female"],["A Guy", "male"]]) %><br/>
	
	<div><%= f.label :desired %><br />
	<%= select :user, :desired, options_for_select([["A Guy", "men"], ["A Girl", "women"], ["Any","any"]]) %><br/>
	
	<div><%= f.label :zipcode %><br />
	  <%= f.text_field :zipcode %></div>
	
  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "links" %>
